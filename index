    <script>
        let allData = [];
        let filteredData = [];
        let charts = {};

        const OTD_TARGET = 98.5;
        let lateTolerance = 0;
        let earlyTolerance = 0;

        document.getElementById('fileInput').addEventListener('change', handleFileUpload);

        function handleFileUpload(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const data = new Uint8Array(e.target.result);
                    const workbook = XLSX.read(data, { type: 'array' });
                    const firstSheet = workbook.Sheets[workbook.SheetNames[0]];
                    const jsonData = XLSX.utils.sheet_to_json(firstSheet);
                    
                    processData(jsonData);
                } catch (error) {
                    alert('Error reading file: ' + error.message);
                }
            };
            reader.readAsArrayBuffer(file);
        }

        function processData(rawData) {
            allData = rawData.map(row => {
                const dueDate = parseExcelDate(row['Due Date']);
                const receiptDate = parseExcelDate(row['Last Rcvd']);
                
                let daysLate = 0;
                let isLate = false;
                let isTooEarly = false;
                
                if (dueDate && receiptDate) {
                    const diffTime = receiptDate - dueDate;
                    daysLate = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                    
                    // Apply tolerance: only late if beyond tolerance
                    isLate = daysLate > lateTolerance;
                    
                    // Check if too early (negative days means early)
                    isTooEarly = daysLate < -earlyTolerance;
                }
                
                return {
                    supplier: row['Vendor Name'],
                    po: row['PO'],
                    line: row['Line'],
                    item: row['Item'],
                    description: row['Item Description'],
                    dueDate: dueDate,
                    receiptDate: receiptDate,
                    daysLate: daysLate,
                    isLate: isLate,
                    isTooEarly: isTooEarly,
                    status: row['Line Status'],
                    received: row['Received']
                };
            }).filter(row => row.receiptDate && row.dueDate);

            filteredData = [...allData];
            
            populateFilters();
            updateDashboard();
            
            document.getElementById('uploadSection').style.display = 'none';
            document.getElementById('dashboard').classList.add('active');
        }

        function parseExcelDate(value) {
            if (!value) return null;
            
            if (value instanceof Date) {
                return value;
            }
            
            if (typeof value === 'number') {
                const date = new Date((value - 25569) * 86400 * 1000);
                return date;
            }
            
            if (typeof value === 'string') {
                const parsed = new Date(value);
                if (!isNaN(parsed.getTime())) {
                    return parsed;
                }
            }
            
            return null;
        }

        function populateFilters() {
            const suppliers = [...new Set(allData.map(row => row.supplier))].sort();
            const supplierFilter = document.getElementById('supplierFilter');
            
            supplierFilter.innerHTML = '<option value="all">All Suppliers</option>';
            suppliers.forEach(supplier => {
                const option = document.createElement('option');
                option.value = supplier;
                option.textContent = supplier;
                supplierFilter.appendChild(option);
            });
        }

        function filterData() {
            const supplierFilter = document.getElementById('supplierFilter').value;
            const statusFilter = document.getElementById('statusFilter').value;
            
            filteredData = allData.filter(row => {
                const matchSupplier = supplierFilter === 'all' || row.supplier === supplierFilter;
                const matchStatus = statusFilter === 'all' || row.status === statusFilter;
                return matchSupplier && matchStatus;
            });
            
            updateDashboard();
        }

        function updateTolerance() {
            lateTolerance = parseInt(document.getElementById('lateTolerance').value) || 0;
            earlyTolerance = parseInt(document.getElementById('earlyTolerance').value) || 0;
            
            // Update display text
            document.getElementById('lateToleranceDisplay').textContent = lateTolerance;
            
            const earlyWarningDisplay = document.getElementById('earlyWarningDisplay');
            if (earlyTolerance > 0) {
                earlyWarningDisplay.textContent = ` Deliveries more than ${earlyTolerance} days early will be flagged.`;
                earlyWarningDisplay.style.display = 'inline';
            } else {
                earlyWarningDisplay.style.display = 'none';
            }
            
            // Recalculate all data with new tolerance
            allData = allData.map(row => {
                const daysLate = row.daysLate;
                const isLate = daysLate > lateTolerance;
                const isTooEarly = daysLate < -earlyTolerance;
                
                return {
                    ...row,
                    isLate: isLate,
                    isTooEarly: isTooEarly
                };
            });
            
            // Reapply filters and update dashboard
            filterData();
        }

        function updateDashboard() {
            const totalLines = filteredData.length;
            const lateLines = filteredData.filter(row => row.isLate).length;
            const onTimeLines = totalLines - lateLines;
            const otdRate = totalLines > 0 ? ((onTimeLines / totalLines) * 100).toFixed(2) : 0;
            
            document.getElementById('totalLines').textContent = totalLines.toLocaleString();
            document.getElementById('onTimeLines').textContent = onTimeLines.toLocaleString();
            document.getElementById('lateLines').textContent = lateLines.toLocaleString();
            document.getElementById('otdRate').textContent = otdRate + '%';
            document.getElementById('otdProgress').style.width = Math.min(otdRate, 100) + '%';
            
            const alertDiv = document.getElementById('performanceAlert');
            if (parseFloat(otdRate) >= OTD_TARGET) {
                alertDiv.innerHTML = `
                    <div class="alert success">
                        <div class="alert-icon">âœ“</div>
                        <div>
                            <strong>Excellent Performance!</strong> OTD rate of ${otdRate}% meets or exceeds the target of ${OTD_TARGET}%
                        </div>
                    </div>
                `;
            } else {
                alertDiv.innerHTML = `
                    <div class="alert warning">
                        <div class="alert-icon">âš </div>
                        <div>
                            <strong>Below Target:</strong> OTD rate of ${otdRate}% is ${(OTD_TARGET - parseFloat(otdRate)).toFixed(2)}% below the ${OTD_TARGET}% target
                        </div>
                    </div>
                `;
            }
            
            const supplierFilter = document.getElementById('supplierFilter').value;
            if (supplierFilter !== 'all') {
                document.getElementById('supplierName').textContent = supplierFilter;
            } else {
                document.getElementById('supplierName').textContent = 'All Suppliers';
            }
            
            if (filteredData.length > 0) {
                const dates = filteredData.map(row => row.dueDate).filter(d => d);
                const minDate = new Date(Math.min(...dates));
                const maxDate = new Date(Math.max(...dates));
                document.getElementById('dateRange').textContent = 
                    `${minDate.toLocaleDateString()} - ${maxDate.toLocaleDateString()}`;
            }
            
            updateCharts();
            updateTable();
        }

        function updateCharts() {
            const totalLines = filteredData.length;
            const lateLines = filteredData.filter(row => row.isLate).length;
            const onTimeLines = totalLines - lateLines;
            
            if (charts.performance) {
                charts.performance.destroy();
            }
            
            const ctx1 = document.getElementById('performanceChart').getContext('2d');
            charts.performance = new Chart(ctx1, {
                type: 'doughnut',
                data: {
                    labels: ['On-Time', 'Late'],
                    datasets: [{
                        data: [onTimeLines, lateLines],
                        backgroundColor: ['#4CAF50', '#E63946'],
                        borderColor: ['#4CAF50', '#E63946'],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: '#E6EDF3',
                                font: {
                                    size: 12,
                                    family: 'Work Sans'
                                },
                                padding: 15
                            }
                        }
                    }
                }
            });
            
            const supplierStats = {};
            allData.forEach(row => {
                if (!supplierStats[row.supplier]) {
                    supplierStats[row.supplier] = { total: 0, onTime: 0 };
                }
                supplierStats[row.supplier].total++;
                if (!row.isLate) {
                    supplierStats[row.supplier].onTime++;
                }
            });
            
            const supplierData = Object.entries(supplierStats)
                .map(([name, stats]) => ({
                    name,
                    otd: (stats.onTime / stats.total * 100).toFixed(1)
                }))
                .sort((a, b) => b.otd - a.otd)
                .slice(0, 5);
            
            if (charts.supplier) {
                charts.supplier.destroy();
            }
            
            const ctx2 = document.getElementById('supplierChart').getContext('2d');
            charts.supplier = new Chart(ctx2, {
                type: 'bar',
                data: {
                    labels: supplierData.map(s => s.name.substring(0, 20)),
                    datasets: [{
                        label: 'OTD %',
                        data: supplierData.map(s => s.otd),
                        backgroundColor: 'rgba(0, 217, 184, 0.8)',
                        borderColor: '#00D9B8',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            ticks: {
                                color: '#8B949E',
                                callback: function(value) {
                                    return value + '%';
                                }
                            },
                            grid: {
                                color: '#30363D'
                            }
                        },
                        x: {
                            ticks: {
                                color: '#8B949E'
                            },
                            grid: {
                                display: false
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }

        function updateTable() {
            const tbody = document.getElementById('tableBody');
            tbody.innerHTML = '';
            
            const displayData = filteredData.slice(0, 100);
            
            displayData.forEach(row => {
                const tr = document.createElement('tr');
                
                const daysLateText = row.daysLate > 0 ? `+${row.daysLate}` : row.daysLate;
                
                // Determine status based on tolerance
                let statusClass, statusText;
                if (row.isTooEarly) {
                    statusClass = 'too-early';
                    statusText = 'Too Early';
                } else if (row.isLate) {
                    statusClass = 'late';
                    statusText = 'Late';
                } else {
                    statusClass = 'on-time';
                    statusText = 'On-Time';
                }
                
                // Color the days late/early text
                let daysColor;
                if (row.isTooEarly) {
                    daysColor = 'var(--warning)';
                } else if (row.isLate) {
                    daysColor = 'var(--danger)';
                } else {
                    daysColor = 'var(--success)';
                }
                
                tr.innerHTML = `
                    <td>${row.supplier}</td>
                    <td>${row.po}</td>
                    <td>${row.line}</td>
                    <td>${row.item || '-'}</td>
                    <td>${row.dueDate ? row.dueDate.toLocaleDateString() : '-'}</td>
                    <td>${row.receiptDate ? row.receiptDate.toLocaleDateString() : '-'}</td>
                    <td style="color: ${daysColor}">${daysLateText}</td>
                    <td><span class="status-badge ${statusClass}">${statusText}</span></td>
                `;
                
                tbody.appendChild(tr);
            });
            
            if (filteredData.length > 100) {
                const tr = document.createElement('tr');
                tr.innerHTML = `<td colspan="8" style="text-align: center; color: var(--text-secondary);">Showing first 100 of ${filteredData.length} lines</td>`;
                tbody.appendChild(tr);
            }
        }

        function exportReport() {
            const totalLines = filteredData.length;
            const lateLines = filteredData.filter(row => row.isLate).length;
            const onTimeLines = totalLines - lateLines;
            const tooEarlyLines = filteredData.filter(row => row.isTooEarly).length;
            const otdRate = totalLines > 0 ? ((onTimeLines / totalLines) * 100).toFixed(2) : 0;
            
            let csvContent = "Supplier Scorecard Report\n\n";
            csvContent += "Summary Metrics\n";
            csvContent += `Total Lines,${totalLines}\n`;
            csvContent += `On-Time Lines,${onTimeLines}\n`;
            csvContent += `Late Lines,${lateLines}\n`;
            csvContent += `Too Early Lines,${tooEarlyLines}\n`;
            csvContent += `OTD Rate,${otdRate}%\n`;
            csvContent += `Target,${OTD_TARGET}%\n`;
            csvContent += `Late Tolerance (Days),${lateTolerance}\n`;
            csvContent += `Early Tolerance (Days),${earlyTolerance}\n\n`;
            
            csvContent += "Detailed Line Items\n";
            csvContent += "Supplier,PO Number,Line,Item,Due Date,Receipt Date,Days Late,Status\n";
            
            filteredData.forEach(row => {
                let status;
                if (row.isTooEarly) {
                    status = 'Too Early';
                } else if (row.isLate) {
                    status = 'Late';
                } else {
                    status = 'On-Time';
                }
                
                csvContent += `"${row.supplier}",${row.po},${row.line},"${row.item || ''}",`;
                csvContent += `${row.dueDate ? row.dueDate.toLocaleDateString() : ''},`;
                csvContent += `${row.receiptDate ? row.receiptDate.toLocaleDateString() : ''},`;
                csvContent += `${row.daysLate},${status}\n`;
            });
            
            const blob = new Blob([csvContent], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `supplier_scorecard_${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
        }
    </script>
</body>
</html>
