                            <option value="Open">Open</option>
                        </select>
                    </div>
                    <div class="filter-group">
                        <label class="filter-label">Late Tolerance (Days)</label>
                        <input type="number" id="lateTolerance" value="0" min="0" max="30" 
                               onchange="updateTolerance()" 
                               style="background: var(--bg-dark); color: var(--text-primary); border: 1px solid var(--border); border-radius: 6px; padding: 0.75rem; font-size: 0.9rem; width: 100%;">
